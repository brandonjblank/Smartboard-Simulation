<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <navigation-rule>
            <from-view-id>CreateProject.xhtml</from-view-id>
            <navigation-case>
                <from-action>#{slideController.prepareCreate}</from-action>
                <from-outcome>Create</from-outcome>
                <to-view-id>CreateProject.xhtml</to-view-id>
            </navigation-case>
        </navigation-rule>
        <navigation-rule>
            <from-view-id>CreateProject.xhtml</from-view-id>
            <navigation-case>
                <from-action>#{slideController.create}</from-action>
                <from-outcome>Create</from-outcome>
                <to-view-id>CreateProject.xhtml</to-view-id>
            </navigation-case>
        </navigation-rule>
        <navigation-rule>
            <from-view-id>open.xhtml</from-view-id>
            <navigation-case>
                <from-action>#{projectController.prepareList}</from-action>
                <from-outcome>List</from-outcome>
                <to-view-id>open.xhtml</to-view-id>
            </navigation-case>
        </navigation-rule>
        <managed-bean>
            <managed-bean-name>Theme</managed-bean-name>
            <managed-bean-class>Beans.Theme</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
            <managed-property>
                <property-name>defaultTheme</property-name>
                <value>"Normal"</value>
            </managed-property>
        </managed-bean>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
   
</faces-config>
